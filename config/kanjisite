upstream kanjisite {
        server 127.0.0.1:8001;
}

server {
        server_name www.kanjisama.com;
        return 301 $scheme://kanjisama.com$request_uri;
}

server {
        server_name kanjisama.com localhost 127.0.0.1;

        index index.html;

        location / {
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header Host $http_host;
                proxy_redirect off;

                proxy_pass http://kanjisite;
        }

        location /static/ {
                alias /opt/venv/kanjisite/static/;
                access_log off;
                expires 7d;
        }

        location /static/admin/ {
                alias /opt/venv/lib/python2.7/site-packages/django/contrib/admin/static/;
                access_log off;
                expires 7d;
        }
}

